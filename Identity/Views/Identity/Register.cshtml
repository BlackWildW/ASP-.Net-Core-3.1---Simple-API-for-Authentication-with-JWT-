@model User
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form method="post" asp-action="Registration" asp-controller="Identity" asp-antiforgery="true">
    <div>
        <div class="validation" asp-validation-summary="All"></div>
        <div>
            <label>Username</label><br />
            <input type="text" asp-for="Name" /><br /><br />
        </div>
        <div>
            <label>Login</label><br />
            <input type="text" asp-for="Email" /><br /><br />
        </div>
        <div>
            <label>Password</label><br />
            <input type="text" asp-for="Password" /><br /><br />
        </div>
        <div>
            <label>Confirm Password</label><br />
            <input type="text" asp-for="ConfirmPassword" /><br /><br />
        </div>
        <div>
            <input type="submit" value="Submit" />
        </div>
    </div>
</form>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
